<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd">

    <changeSet id="1" author="timur">


        <createTable tableName="calendar">
            <column name="year" type="bigint">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="total_working_days" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="total_weekends" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="total_working_days_40_hours_week" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="total_working_days_36_hours_week" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="total_working_days_24_hours_week" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>



        <createTable tableName="calendar_month">

            <column name="calendar_year" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            
            <column name="month_name" type="varchar">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="month_number" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseTableName="calendar_month" baseColumnNames="calendar_year" constraintName="FK_calendar_year_calendar"
                                 referencedTableName="calendar"
                                 referencedColumnNames="year"/>
        
        <addUniqueConstraint tableName="calendar_month" columnNames="calendar_year,month_number"/>
        
        
        
        <createTable tableName="calendar_day">
            <column name="calendar_month_year" type="bigint"/>
            <column name="calendar_month_number" type="bigint"/>
            <column name="number" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="day_type" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="calendar_day" columnNames="calendar_month_year, calendar_month_number, number"/>

        <addForeignKeyConstraint baseTableName="calendar_day" baseColumnNames="calendar_month_year,calendar_month_number"
                                 constraintName="FK_calendar_day_calendar_month"
                                 referencedTableName="calendar_month"
                                 referencedColumnNames="calendar_year,month_number"/>

        
        
    </changeSet>

</databaseChangeLog>